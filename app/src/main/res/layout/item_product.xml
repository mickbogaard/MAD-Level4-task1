<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvProductAmmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ammount"
        app:layout_constraintEnd_toStartOf="@+id/tvProductName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.75"
        />


    <TextView
        android:id="@+id/tvProductName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="@string/product_name"
        app:layout_constraintBottom_toBottomOf="@+id/tvProductAmmount"
        app:layout_constraintStart_toEndOf="@+id/tvProductAmmount"
        app:layout_constraintTop_toTopOf="@+id/tvProductAmmount"
        app:layout_constraintWidth_percent="0.75"
        />
</androidx.constraintlayout.widget.ConstraintLayout>